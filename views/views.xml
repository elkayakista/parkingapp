<?xml version="1.0" ?>
<odoo>

<!-- Vistas -->

<!-- Vistas del Estacionamiento-->

    <record id="estacionamiento_tree_view" model="ir.ui.view">
        <field name="name">estacionamiento_tree_view</field>
        <field name="model">estacionamiento</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="direccion"/>
                <field name="telefono"/>
                <field name="localidad_id"/>
                <field name="lavadero"/>
                <field name="inflado"/>
                <field name="baño"/>
                <field name="parcela_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

<!-- Form View -->
    <record id="estacionamiento_form_view" model="ir.ui.view">
            <field name="name">estacionamiento_form_view</field>
            <field name="model">estacionamiento</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        
                    </header>
                    <sheet>
                        <group>
                            <group>
                            <field name="name"/>
                            <field name="direccion"/>
                            <field name="telefono"/>
                            <field name="localidad_id"/> 
                            <field name="hora_apertura" widget="float_time"/> 
                            <field name="hora_cierre" widget="float_time"/>                      
                            </group>
                            <group>
                            <field name="lavadero"/>
                            <field name="inflado"/>
                            <field name="baño"/>
                            </group>
                            <group>
                            <field name="parcela_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
                              
            </field>          
    </record>



<!-- Search View -->
<record id="estacionamiento_search_view" model="ir.ui.view">
 
        <field name="name">estacionamiento_search_view</field>
        <field name="model">estacionamiento</field>
        <field name="arch" type="xml">
            <search> 
                <field name="name"/>
                <group>
                    <filter name="inflado" string="Servicio de Inflado de Neumáticos" context="{'group_by':'inflado'}" />
                </group>
                <group>
                    <filter name="lavadero" string="Servicio de Lavado" context="{'group_by':'lavadero'}" />
                </group>
                <group>
                    <filter name="baño" string="Servicio de baño" context="{'group_by':'baño'}" />
                </group>
            </search>           
        </field>          
</record>

    

<!-- Vistas del Parcelas-->

    <record id="parcela_tree_view" model="ir.ui.view">
        <field name="name">parcela_tree_view</field>
        <field name="model">parcela</field>
        <field name="arch" type="xml">
            <tree>
                <field name="estacionamiento_id"/>
                <field name="name"/>
                <field name="tipo_vehiculo_id"/>
                <field name="cubierta"/>            
                <field name="alquiler_ids" widget="many2many_tags"/>

                
            </tree>
        </field>
    </record>

    <record id="parcela_form_view" model="ir.ui.view">
        <field name="name">parcela_form_view</field>
        <field name="model">parcela</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="estacionamiento_id"/>
                        <field name="name"/>
                        <field name="tipo_vehiculo_id"/>
                        <field name="cubierta"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!-- Search View -->
<record id="parcelas_search_view" model="ir.ui.view">
 
        <field name="name">parcelas_search_view</field>
        <field name="model">parcela</field>
        <field name="arch" type="xml">
            <search> 
                <field name="name"/>
                <field name="estacionamiento_id"/>
                <field name="tipo_vehiculo_id"/>
                <field name="cubierta"/>
                <group>
                    <filter name="estacionamiento" string="Estacionamiento" context="{'group_by':'estacionamiento_id'}" />
                </group>
                <group>
                    <filter name="cubierta" string="Cubierta" context="{'group_by':'cubierta'}" />
                </group>
            </search>           
        </field>          
</record>

<!-- Vistas Tipos Vehículos-->

    <record id="tipos_vehiculos_tree_view" model="ir.ui.view">
        <field name="name">tipos_vehiculos_tree_view</field>
        <field name="model">tipo_vehiculo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="precio_alquiler_dia"/>
             </tree>
        </field>
    </record>

 
<!-- Vistas de Vehículos  -->


<record id="vehiculos_tree_view" model="ir.ui.view">
        <field name="name">vehiculo_tree_view</field>
        <field name="model">vehiculo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="marca"/>
                <field name="modelo"/>
                <field name="tipo_vehiculo_id"/>
                <field name="conductor_ids" widget="many2many_tags"/>
            </tree>
        </field>
</record>
<!-- Search View -->
<record id="vehiculos_search_view" model="ir.ui.view">
 
        <field name="name">vehiculos_search_view</field>
        <field name="model">vehiculo</field>
        <field name="arch" type="xml">
            <search> 
                <field name="name"/>
                <field name="conductor_ids"/>
                <field name="tipo_vehiculo_id"/>
                <group>
                    <filter name="tipo_vehiculo" string="Tipo Vehìculo" context="{'group_by':'tipo_vehiculo_id'}" />
                </group>
            </search>           
        </field>          
</record>

